# Server Configuration
PORT=3002
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
POSTGRES_URI=postgresql://username:password@localhost:5432/transaction_service_db

# Redis Configuration
REDIS_URI=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=30d
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
PROMETHEUS_METRICS_ENABLED=true

# Service Communication
USER_SERVICE_URI=http://localhost:3001
EVENT_BUS_URI=http://localhost:4000

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_SCORE_THRESHOLD=0.7

# Allocation Engine
ALLOCATION_ENGINE_ENABLED=true
DEFAULT_ALLOCATION_PERCENTAGES={"savings":30,"investments":20,"expenses":50}

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS Secrets (if using AWS)
AWS_REGION=us-east-1
AWS_SECRET_NAME=transaction-service-secrets